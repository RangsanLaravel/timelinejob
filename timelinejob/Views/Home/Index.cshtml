@model List<tbt_job_substatus>
@{
    ViewData["Title"] = "Home Page";
}


<div class="container shadow min-vh-100 py-4">
    @if(Model == null)
    {
        <form asp-action="Index"  asp-controller="Home" method="get">
            <div class="row mt-5">
                <div class="col-md-5 mx-auto">
                    <div class="small fw-light">search input job id</div>
                    <div class="input-group mt-2">
                        <input class="form-control border" name="jobid" type="search" placeholder="JOB ID" id="jobid">
                    </div>
                </div>
            </div>
        </form>
        @if (ViewBag.Jobid != null)
        {
            <div class="container py-4">
                <h2 class="font-weight-light text-center text-muted py-3">JOB ID :@ViewBag.Jobid</h2>
                <h2 class="font-weight-light text-center text-muted py-3">-ไม่พบข้อมูล-</h2>
            </div>
        }
        
    }
    else
    {
        <div class="container py-4">
            <h2 class="font-weight-light text-center text-muted py-3">JOB ID :@ViewBag.Jobid</h2>
            @for (int i=0;i< Model.Count;i++)
            {
                if (i == 0)
                {
                    <div class="row">
                        <!-- timeline item 1 left dot -->
                        <div class="col-auto text-center flex-column d-none d-sm-flex">
                            <div class="row h-50">
                                <div class="col">&nbsp;</div>
                                <div class="col">&nbsp;</div>
                            </div>
                            <h5 class="m-2">
                                <span class="badge rounded-pill bg-light border">&nbsp;</span>
                            </h5>
                            <div class="row h-50">
                                <div class="col border-end order">&nbsp;</div>
                                <div class="col">&nbsp;</div>
                            </div>
                        </div>
                        <!-- timeline item 1 event content -->
                        <div class="col py-2">
                            <div class="card shadow">
                                <div class="card-body">
                                    <div class="float-end text-muted">@Model[i].status_dt</div>
                                    <h4 class="card-title text-muted">@Model[i].substatus - (@Model[i].create_id)</h4>
                                    <p class="card-text">@Model[i].status_remark</p>
                                </div>
                            </div>
                        </div>
                    </div>
                }
                else if (i == Model.Count - 1)
                {
                    <div class="row">
                        <div class="col-auto text-center flex-column d-none d-sm-flex">
                            <div class="row h-50">
                                <div class="col border-end">&nbsp;</div>
