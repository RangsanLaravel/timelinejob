                            <div class="card  shadow">
                                <div class="card-body">
                                    <div class="float-end text-muted">@Model[i].status_dt</div>
                                    <h4 class="card-title text-muted">@Model[i].substatus - (@Model[i].create_id)</h4>
                                    <p class="card-text">@Model[i].status_remark</p>
                                </div>
                            </div>
                        </div>
                    </div>
                }

            }
